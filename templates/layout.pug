doctype html
html
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Test Site
        link(rel="stylesheet", href="/styless.css")
    body 
        header#header
            //- Navigation bar
            nav#nav
                h1: a(href="/") SarrahGandhi
                ul
                    li: a(href="/") Home
                    li: a(href="/shop") Shop
                    li: a(href="/about") About
                    li: a(href="/contact") Contact
                ul 
                    li: img(src="images/icons/mdi_account-alert-outline.png", alt="twitter")
                    li: img(src="images/icons/ant-design_shopping-cart-outlined.png", alt="instagram")
                    li: img(src="images/icons/akar-icons_search.png", alt="search")
        main#main
            //- Layout content for landing page
            block layout-content
            block range
            block productrange
        
        //- footer content    
        footer#footer
            div#footer-content
                h3 Sarrah Gandhi 
                h3 Links 
                    ul
                        li: a(href="/") Home
                        li: a(href="/shop") Shop
                        li: a(href="/about") About
                        li: a(href="/contact") Contact
                    
                h3 Help 
                    ul
                        li: a(href="/paymentoptions") Payment Options
                        li: a(href="/shippingoptions") Shipping Options
                        li: a(href="/returns") Returns
                        li: a(href="/faq") FAQ
                h3#newsletter NewsLetter 
                    
                    input(type="text")  
                    button(type="submit") Subscribe

